<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.login.RequiredEmailPasswordFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_required_email_passowrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/sign_up_image_view"
        android:layout_width="@dimen/logo_width_dimen"
        android:layout_height="@dimen/logo_height_dimen"
        android:layout_marginTop="@dimen/default_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_required_email_passowrd"
        app:srcCompat="@drawable/exchange_logo" />

    <TextView
        android:id="@+id/info_validate_email_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap"
        android:layout_marginEnd="@dimen/default_gap"
        android:text="@string/validate_email_description_text"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_image_view"
        app:layout_constraintStart_toStartOf="@+id/sign_up_image_view"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_image_view" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldvalidatedEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_gap"
        android:layout_marginTop="@dimen/medium_gap"
        android:layout_marginEnd="@dimen/default_gap"
        android:hint="@string/example_gmail_text"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:boxCornerRadiusBottomEnd="@dimen/medium_gap"
        app:boxCornerRadiusBottomStart="@dimen/medium_gap"
        app:boxCornerRadiusTopEnd="@dimen/medium_gap"
        app:boxCornerRadiusTopStart="@dimen/medium_gap"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/red"
        app:errorEnabled="true"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_validate_email_textview">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/validate_email_textfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/validate_email_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/aqua"
        android:text="@string/validate_button_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/outlinedTextFieldvalidatedEmail"
        app:layout_constraintStart_toStartOf="@+id/outlinedTextFieldvalidatedEmail"
        app:layout_constraintTop_toBottomOf="@+id/outlinedTextFieldvalidatedEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>