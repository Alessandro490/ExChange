<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.category.CategoryFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/technology_cardview_category"
        android:layout_width="@dimen/category_cardview_width"
        android:layout_height="@dimen/category_cardview_height"
        android:layout_marginTop="@dimen/default_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineCategory"
        android:backgroundTint="@color/cardviewcolor"
        app:cardCornerRadius="@dimen/medium_gap"
        app:cardMaxElevation="@dimen/medium_gap"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/category_image_view"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:contentDescription="@string/technology_contentdescription_cardview"
                android:src="@drawable/technology"
                android:paddingTop="@dimen/small_gap"/>

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/technology_text_Cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_gap"
                    android:layout_marginEnd="@dimen/medium_gap"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/technology_text_cardview"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_gap"
                    android:paddingStart="28dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tools_cardview_category"
        android:layout_width="@dimen/category_cardview_width"
        android:layout_height="@dimen/category_cardview_height"
        android:layout_marginTop="@dimen/big_gap"
        android:backgroundTint="@color/cardviewcolor"
        app:cardCornerRadius="@dimen/medium_gap"
        app:cardMaxElevation="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/technology_cardview_category">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tools_image_view"
                android:layout_width="150dp"
                android:layout_height="78dp"
                android:contentDescription="@string/tools_contentdescription_cardview"
                android:src="@drawable/tools"
                android:paddingTop="@dimen/default_gap"
                />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tools_text_Cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_gap"
                    android:layout_marginEnd="@dimen/medium_gap"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/tools_Cardview_category"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_gap"
                    android:paddingStart="@dimen/medium_gap"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/category_cardview_width"
        android:layout_height="@dimen/category_cardview_height"
        android:layout_marginTop="@dimen/big_gap"
        android:backgroundTint="@color/cardviewcolor"
        app:cardCornerRadius="@dimen/medium_gap"
        app:cardMaxElevation="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tools_cardview_category">

        <LinearLayout
            android:layout_width="@dimen/category_cardview_width"
            android:layout_height="@dimen/category_cardview_height"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/livingroom_image_view"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:src="@drawable/livingroom"
                android:contentDescription="@string/livingroom_contentdescription_category"
                android:paddingTop="@dimen/default_gap"
                android:paddingStart="@dimen/default_gap"
                />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_gap"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/livingroom_text_Cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_gap"
                    android:layout_marginEnd="@dimen/medium_gap"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/living_room_text_cardview"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_gap"
                    android:paddingStart="42dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />


</androidx.constraintlayout.widget.ConstraintLayout>