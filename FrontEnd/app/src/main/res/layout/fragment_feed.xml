<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.exchange.feed.FeedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10B4F4"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/selectMenu"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:background="@drawable/header_menu_borde"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:background="@drawable/header_menu_borde"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/header_menu_borde"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15sp"
        android:orientation="vertical"
        android:paddingHorizontal="10sp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:backgroundTint="#e0dcdc"
            android:background="@drawable/search_bar_borde"
            android:radius="10sp"
            android:hint="Buscar"
            android:paddingHorizontal="8sp"
            android:layout_marginBottom="10sp"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>