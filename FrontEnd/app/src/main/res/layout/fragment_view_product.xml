<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.feed.ViewProductFragment"
    android:background="#D9D9D9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10B4F4"
        android:gravity="right">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:background="@drawable/header_menu_borde"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:background="@drawable/header_menu_borde"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/header_menu_borde"
                android:orientation="vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:background="@color/black"
            android:src="@drawable/product_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name_text"
            android:textSize="45sp"
            android:textAlignment="center"
            android:layout_marginVertical="15sp"
            android:layout_marginHorizontal="10sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_text"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_product"/>

            <TextView
                android:id="@+id/userProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="jose.cardoza"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_product"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="7777-7777"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>